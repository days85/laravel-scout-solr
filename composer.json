{
    "name": "days85/laravel-scout-solr",
    "description": "Solr Driver for Laravel Scout",
    "keywords": ["laravel", "scout", "solr"],
    "require": {
        "php": ">=5.6.4",
        "laravel/scout": "^3.0",
        "solarium/solarium": "^3.8"
    },
     "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": {
            "ScoutEngines\\Solr\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ScoutEngines\\Solr\\Test\\": "tests"
        }
    },
    "suggest": {
        "solarium/solarium": "Required to use the solatium engine (^3.8)."
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
